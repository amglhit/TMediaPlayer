<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
    <RelativeLayout android:id="@+id/top_control" android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ad_top_background"
    >
        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
    </RelativeLayout>

    <LinearLayout android:id="@+id/view_loading"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:background="@drawable/ad_top_background"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:padding="8dp">
        <ProgressBar android:id="@+id/progress_loading"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
        />
        <TextView android:id="@+id/text_loading"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:text="loading"
                  android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/view_buffering"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:background="@drawable/ad_top_background"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:padding="8dp">
        <ProgressBar android:id="@+id/progress_buffering"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
        />
        <TextView android:id="@+id/text_buffering"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:text="buffering"
                  android:textColor="@android:color/white"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/bottom_control"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">
        <ImageView android:id="@+id/image_play"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_alignParentLeft="true"
                   android:background="@drawable/selector_t_conrtol_bg"
                   android:scaleType="centerInside"
                   android:src="@drawable/ic_player_pause"/>

        <TextView android:id="@+id/text_progress"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:background="@drawable/ad_top_background"
                  android:gravity="center"
                  android:padding="8dp"
                  android:text="progress"
                  android:textColor="@android:color/white"/>


    </RelativeLayout>
</FrameLayout>